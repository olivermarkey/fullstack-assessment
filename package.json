{
  "name": "fullstack-assessment",
  "version": "1.0.0",
  "description": "This repo contains a full-stack web app",
  "main": "server/index.js",
  "scripts": {
    "server": "nodemon server/index.ts",
    "db": "cd database && docker-compose up",
    "db:stop": "docker stop db-container",
    "db:remove": "docker rm -f db-container",
    "db:reset": "npm run db:remove && npm run db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olivermarkey/fullstack-assessment.git"
  },
  "dependencies": {
    "express": "^4.21.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2"
  }
}
